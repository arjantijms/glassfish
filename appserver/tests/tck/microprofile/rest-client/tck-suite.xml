<suite name="MicroProfile Rest Client TCK" verbose="2" configfailurepolicy="skip" >
    <listeners>
        <listener class-name="org.glassfish.microprofile.rest.client.tck.client.ProgressListener" />
    </listeners>
    <!-- Separated because they sometimes broke when running in the main block -->
    <test name="MicroProfile Rest Client TCK - ASYNC Tests">
        <packages>
            <package name="org.eclipse.microprofile.rest.client.tck.asynctests.*" />
        </packages>
    </test>
    <test name="MicroProfile Rest Client TCK - Common Tests">
        <packages>
            <package name="org.eclipse.microprofile.rest.client.tck.*">
                <exclude name="org.eclipse.microprofile.rest.client.tck.asynctests.*" />
            </package>
        </packages>
    </test>
</suite>
